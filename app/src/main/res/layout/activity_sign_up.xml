<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_backround">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="167dp"
            android:layout_height="63dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="16dp"
            android:fontFamily="serif"
            android:text="Sign Up"
            android:textSize="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="108dp" />

        <AutoCompleteTextView
            android:id="@+id/customerFirstName"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/userimage"
            android:drawablePadding="5dp"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginLeft="60dp" />

        <AutoCompleteTextView
            android:id="@+id/password"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/passwor_image"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/customerFirstName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerFirstName"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="60dp" />

        <AutoCompleteTextView
            android:id="@+id/customerEmail"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/at"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="60dp" />

        <AutoCompleteTextView
            android:id="@+id/customerPhone"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/phone_icon"
            android:drawablePadding="5dp"
            android:hint="Phone"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/customerEmail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerEmail"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="60dp" />

        <AutoCompleteTextView
            android:id="@+id/customerAddress"
            android:layout_width="161dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/home_icon"
            android:drawablePadding="5dp"
            android:hint="Street"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerPhone"
            android:layout_marginLeft="60dp" />

        <AutoCompleteTextView
            android:id="@+id/customerAddressNumber"
            android:layout_width="96dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white"
            android:drawablePadding="5dp"
            android:hint="Number"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/customerPhone"
            app:layout_constraintTop_toBottomOf="@+id/customerPhone" />

        <AutoCompleteTextView
            android:id="@+id/customerPostCode"
            android:layout_width="161dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_local_post_office_black_24dp"
            android:drawablePadding="5dp"
            android:hint="Post Code"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/signUpButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerAddress"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="52dp"
            android:text="Sign UP"
            android:background="@drawable/roundedlayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerAddressNumber"
            android:layout_marginRight="36dp" />

        <Button
            android:id="@+id/signUpNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="52dp"
            android:text="Next"
            android:background="@drawable/roundedlayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerAddressNumber"
            android:layout_marginRight="36dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
