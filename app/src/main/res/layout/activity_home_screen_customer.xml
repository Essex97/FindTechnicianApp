<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gr.aueb.softeng.project1804.view.customerhome.HomeScreenCustomerActivity"
    android:background="@drawable/gradient_backround">

    <TextView
        android:id="@+id/listTech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:text="List Of Technicians"
        android:textAlignment="center"
        android:textSize="20dp"
        android:typeface="normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listTech"
        android:paddingTop="10dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
